{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "lib": ["es2015"]
  },
  "exclude": [
    "node_modules",
    "*/**/@types",
    "*/**/__tests__",
    "*/**/__data__",
    "*/**/__helpers__",
    "*/**/__mocks__"
  ]
}